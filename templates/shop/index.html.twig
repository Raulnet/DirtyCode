{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>{{ block('title') }}</h4>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>user</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for shop in shops %}
                    <tr>
                        <td>{{ shop.id }}</td>
                        <td>{{ shop.title }}</td>
                        <td>{{ shop.user }}</td>
                        <td>
                            <a href="{{ path('shop_show', {'id': shop.id}) }}">show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="card-footer">
                <a class="btn btn-outline-dark" href="{{ path('home') }}">back</a>
            </div>
        </div>
    </div>
{% endblock %}
